<section class="row">
  <div class="sixteen columns settings-wrap">
    <div class="app-placeholder">
      <%= render :partial => 'users/account_nav', :locals => { :active => 'company' } %>

      <h1 class="underlined_small">Fault Email Notifications</h1>
      <p>Select faults that your company wishes to receive email notifications on.</p>
      <ul class="fault-notification-list column">
        <% @faults.each do |f| %>
          <li id="fault-<%= f.id %>" class="clearfix">
            <strong><%= f.title %>~<%= f.code_display %> </strong>
            <em>
              <%= check_box_tag(
                "blah",
                 fault_subscription_path(f, format: :js),
                 f.needs_notification?,
                 { class: "update-subscription" }) %>

              <%# link_to(
                f.subscribe_button_text,
                fault_subscription_path(f, format: :js),
                method: :put,
                remote: true,
                :class => "subscription-link",
                :id => f.id,
                "data-fault-id" => f.id
              ) %>

            </em>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>

