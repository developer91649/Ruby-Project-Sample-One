<h2>Request a CDS account</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :label => 'Request an account or a new user' %>
  <% end %>

<% end %>